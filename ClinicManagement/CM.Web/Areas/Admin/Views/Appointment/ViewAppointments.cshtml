@model CM.Data.ViewModels.Appointment.AppointmentViewModel
@{
    ViewBag.Title = "Appointment";
}
<button class="btn btn-gradient-primary btn-sm mdi mdi-plus" data-target="#addAppointment" data-toggle="modal">Add New</button>
<hr />


<div class="container">
    <div class="row">
        <div class="modal" data-keyboard="false" data-backdrop="static" id="addAppointment" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="card-title">Appointment Details</h4>
                        <button class="mdi mdi-close" data-dismiss="modal" />
                    </div>
                    <div class="modal-body">
                        @using (Html.BeginForm("AddAppointment", "Appointment", new { Area = "Admin" }, FormMethod.Post, new { id = "addAppointmentForm" }))
                        {
                            @Html.HiddenFor(model => model.Id)
                            <div class="form-group">
                                @Html.LabelFor(model => model.Name, new { @class = "control-label" })
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })

                                @Html.LabelFor(model => model.Phone, new { @class = "control-label" })
                                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })

                                @Html.LabelFor(model => model.MailId, new { @class = "control-label" })
                                @Html.EditorFor(model => model.MailId, new { htmlAttributes = new { @class = "form-control" } })

                                @Html.LabelFor(model => model.DOA, new { @class = "control-label" })
                                <div class="input-group" id='dateOfAppointment'>
                                    @Html.EditorFor(model => model.DOA, new { htmlAttributes = new { @class = "form-control" } })
                                    <span class="input-group-addon">
                                        <span class="mdi mdi-calendar-clock"></span>
                                    </span>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="modal-footer">
                        <input type="submit" onclick="addAppointment()" class="btn btn-gradient-primary btn-rounded btn-fw" value="Add">
                        <input type="reset" onclick="resetAddAppointmentForm()" class="btn btn-gradient-secondary btn-rounded btn-fw" value="Reset">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Appointments</h4>
                <table id="appointmentsTable" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Phone Number</th>
                            <th>Email</th>
                            <th>DOA</th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.3/js/responsive.bootstrap4.min.js"></script>
    <script>
        var popup, dataTable;
        $(function () {
            $("#dateOfAppointment").datetimepicker({
                icons: {
                    time: "mdi mdi-clock",
                    date: "mdi mdi-calendar",
                    up: "mdi mdi-arrow-up-bold-circle",
                    down: "mdi mdi-arrow-down-bold-circle"
                }
            });
        });

        $('.modal').on('hidden.bs.modal', function () {
            $(this).find('form')[0].reset();
        });
        dataTable = $(function () {
            $('#appointmentsTable').DataTable({
                "ajax": {
                    "url": "GetAppointments",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "Name" },
                    { "data": "MailId" },
                    { "data": "Phone" },
                    { "data": "DOA" }
                ],
                "language": {
                    "emptyTable": "No data found, please click on <b>Add New</b> Button"
                }
            });
        });

        function addAppointment() {
            $("#addAppointmentForm").submit();
        }

        function resetAddAppointmentForm() {
            $("#addAppointmentForm").trigger("reset");
        }
    </script>
}
