@model CM.Data.ViewModels.Appointment.AppointmentViewModel
@{
    ViewBag.Title = "Appointment";
}
<a class="btn btn-gradient-primary btn-sm mdi mdi-plus" onclick="appointmentPopForm('@Url.Action("AddAppointment","Appointment",new { Area= "Admin" })')">Add New</a>
<hr />

<div class="row">
    <div class="col-lg-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Appointments</h4>
                <table id="appointmentsTable" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Phone Number</th>
                            <th>Email</th>
                            <th>DOA</th>
                            <th></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        var popup, dataTable;
        $(function () {
            $(".form_datetime").datetimepicker({
                format: "dd MM yyyy - hh:ii",
                autoclose: true,
                todayBtn: true,
                pickerPosition: "bottom-left"
            });
        });
        dataTable = $(function () {
            $('#appointmentsTable').DataTable({
                "ajax": {
                    "url": "GetAppointments",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "Name" },
                    { "data": "MailId" },
                    { "data": "Phone" },
                    { "data": "DOA" }
                ],
                "language": {
                    "emptyTable": "No data found, please click on <b>Add New</b> Button"
                }
            });
        });

        function appointmentPopForm(url) {
            debugger
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);
                    popup = formDiv.dialog({
                        modal: true,
                        autoOpen: true,
                        resizable: false,
                        title: "Schedule Appointment",
                        height: 500,
                        width: 500,
                        close: function () {
                            popup.dialog('destroy').remove();
                        }
                    });
                });
        }

        function onAddAppointment(form) {

            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: form.seriliaze(),
                    success: function (data) {
                        if (data.success) {
                            popup.dialog('close');
                            dataTable.ajax.reload();
                        }
                    }
                });
            }
            return false;
        }
    </script>
}
