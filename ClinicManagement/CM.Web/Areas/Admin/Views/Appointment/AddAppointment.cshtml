@model CM.Data.ViewModels.Appointment.AppointmentViewModel
@{
     Layout = null;
}

@using (Html.BeginForm("AddAppointment", "Appointment", new { Area = "Admin" }, FormMethod.Post, new { id = "addAppointmentForm" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @class = "control-label" })
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Phone, new { @class = "control-label" })
        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.MailId, new { @class = "control-label" })
        @Html.EditorFor(model => model.MailId, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.DOA, new { @class = "control-label" })
        @Html.EditorFor(model => model.DOA, new { htmlAttributes = new { @class = "form-control", id = "dateOfAppointment" } })
    </div>

    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-primary"/>
        <input type="reset" value="Reset" class="btn btn-light" />
    </div>
}


