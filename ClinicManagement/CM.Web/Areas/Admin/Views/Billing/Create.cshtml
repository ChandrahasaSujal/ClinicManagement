
@{
    ViewBag.Title = "Create";
}

<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Medicines List</h4>
            <table id="medicinesTable" class="table row-border table-striped hover order-column table-bordered dt-responsive nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th class="text-align-center">Name</th>
                        <th class="text-align-center">Price</th>
                        <th class="text-align-center">MRP</th>
                        <th class="text-align-center">Order Level</th>
                        <th class="text-align-center">Stock Level</th>
                        <th class="text-align-center">Category</th>
                        <th class="text-align-center">Manufacturer</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<hr/>
<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Items</h4>
            <table id="itemPurchaseTable" class="table row-border table-striped hover order-column table-bordered dt-responsive nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th class="text-align-center">Name</th>
                        <th class="text-align-center">Qty</th>
                        <th class="text-align-center">Unit Price</th>
                        <th class="text-align-center">Manufacturer</th>
                        <th class="text-align-center">Price</th>
                    </tr>
                </thead>
                <tbody>
                    
                </tbody>
            </table>
        </div>
    </div>
</div>


@section scripts{
    <script>
        var medicineTable = $('#medicinesTable').DataTable({
            columnDefs: [
                {
                    targets: 0,
                    className: 'dt-body-center',
                    createdCell: function (td, cellData, rowData, row, col) {
                        $(td).attr('MedicineName', rowData.Name); 
                        $(td).attr('Price', rowData.Price); 
                        $(td).attr('MRP', rowData.MRP); 
                        $(td).attr('Manufacturer', rowData.Manufacturer); 
                    }
                },
                {
                    targets: 1,
                    className: 'dt-body-center'
                },
                {
                    targets: 2,
                    className: 'dt-body-center'
                },
                {
                    targets: 3,
                    className: 'dt-body-center'
                },
                {
                    targets: 4,
                    className: 'dt-body-center'
                },
                {
                    targets: 5,
                    className: 'dt-body-center'
                },
                {
                    targets: 6,
                    className: 'dt-body-center'
                }
            ],
            scrollY: 200,
            paging: false,
            scroller: {
                loadingIndicator: true
            },
            createdRow: function (row, data) {
                $(row).attr('id', data.Id);
            },
            "ajax": {
                "url": "GetMedicines",
                "type": "GET",
                "datatype": "json"
            },
            "columns": [
                { "data": "Name" },
                {
                    "data": "Price", render: function (data) {
                        return "&#x20b9; " + data;
                    }
                },
                {
                    "data": "MRP", render: function (data) {
                        return "&#x20b9; " + data;
                    }
                },
                { "data": "OrderLevel" },
                { "data": "StockLevel" },
                { "data": "CategoryName" },
                { "data": "ManufacturerName" },
                {
                    "data": "Id", "render": function (data) {
                        return "<a onclick = addToPurchase('" + data + "') class='btn btn-gradient-primary btn-sm  mdi mdi-plus'>"
                    },
                    "orderable": false,
                    "width": "10px"
                }
            ],
            "language": {
                "emptyTable": "No data found, please add new <b>Medicine</b> from the menu."
            }
        });

        function addToPurchase(id) {
            var itemPurchaseTable = $("#itemPurchaseTable");
            medicineTable.row('#' + id).remove().draw(false);
            return false;
        }
    </script>
}

