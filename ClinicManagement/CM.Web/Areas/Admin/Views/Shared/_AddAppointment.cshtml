@model CM.Data.ViewModels.Appointment.AppointmentViewModel
@{
    Layout = null;
}

<div class="modal" data-keyboard="false" data-backdrop="static" id="addAppointment" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="card-title">Appointment Details</h4>
                <button class="mdi mdi-close" data-dismiss="modal" />
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("AddAppointment", "Appointment", new { Area = "Admin" }, FormMethod.Post, new { id = "addAppointmentForm" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id, new { id = "appointmentId" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, new { @class = "control-label" })
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", id = "appointeeName" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Gender, new { @class = "control-label" })
                        @Html.DropDownListFor(model=>model.Gender, new List<SelectListItem>{
                            new SelectListItem{ Text="Male", Value="Male"},
                            new SelectListItem{ Text="Female", Value="Female"}
                        }, "--- Select ---", new { @class = "form-control",id="appointeeGender" })
                        @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Age, new { @class = "control-label" })
                        @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control", id = "appointeeAge", @type = "number", @min = "0", @max = "120" } })
                        @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Phone, new { @class = "control-label" })
                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", id = "appointeePhone" } })
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.EMail, new { @class = "control-label" })
                        @Html.EditorFor(model => model.EMail, new { htmlAttributes = new { @class = "form-control", id = "appointeeMailId" } })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.DOA, new { @class = "control-label" })
                        <div class="input-group" id="dateOfAppointment">
                            @Html.EditorFor(model => model.DOA, new { htmlAttributes = new { @class = "form-control", id = "appointeeDOA" } })
                            <span class="input-group-addon">
                                <span class="mdi mdi-calendar-clock calendar-icon"></span>
                            </span>
                        </div>
                        @Html.ValidationMessageFor(model => model.DOA, "", new { @class = "text-danger" })
                    </div>
                }
            </div>
            <div class="modal-footer">
                <input type="submit" id="appointmentButton" onclick="appointment()" class="btn btn-gradient-primary btn-rounded btn-fw" value="Add">
                <input type="reset" onclick="resetAddAppointmentForm()" class="btn btn-gradient-secondary btn-rounded btn-fw" value="Reset">
            </div>
        </div>
    </div>
</div>


