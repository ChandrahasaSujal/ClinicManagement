@model CM.Data.ViewModels.Medicine.CategoryViewModel
<div class="modal" data-keyboard="false" data-backdrop="static" id="addCategory" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="card-title">Category Details</h4>
                <button class="mdi mdi-close" data-dismiss="modal" />
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Add", "Category", new { Area = "Admin" }, FormMethod.Post, new { id = "categoryForm", onsubmit = "alert('Hi')" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id, new { id = "categoryId" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, new { @class = "control-label" })
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", id = "categoryName" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, new { @class = "control-label" })
                        @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", id = "categoryDescription"} })
                    </div>
                }
            </div>
            <div class="modal-footer">
                <input type="submit" class="btn btn-gradient-primary btn-rounded btn-fw" value="Add">
                <input type="reset" onclick="resetCategoryForm()" class="btn btn-gradient-secondary btn-rounded btn-fw" value="Reset">
            </div>
        </div>
    </div>
</div>