
@{
    ViewBag.Title = "View";
}

<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Medicines List</h4>
            <table id="medicinesTable" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>MRP</th>
                        <th>Order Level</th>
                        <th>Stock Level</th>
                        <th>Category</th>
                        <th>Manufacturer</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script>
        var medicineTable = $('#medicinesTable').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'excel', 'pdf', 'print'
            ],
            "ajax": {
                "url": "GetMedicines",
                "type": "GET",
                "datatype": "json"
            },
            "columns": [
                { "data": "Name" },
                { "data": "Price" },
                { "data": "MRP" },
                { "data": "OrderLevel" },
                { "data": "StockLevel" },
                { "data": "CategoryName" },
                { "data": "ManufacturerName" },
                {
                    "data": "Id", "render": function (data) {
                        return "<button onclick = getAppointment('" + data + "')  class='btn btn-gradient-primary btn-sm mdi mdi-lead-pencil'style='margin-right:10px' > <button onclick = deleteAppointment('" + data + "') class='btn btn-gradient-primary btn-sm  mdi mdi-delete'>"
                    },
                    "orderable": false,
                    "width": "10px"
                }
            ],
            "language": {
                "emptyTable": "No data found, please add new <b>Medicine</b> from the menu."
            }
        });
    </script>
}
