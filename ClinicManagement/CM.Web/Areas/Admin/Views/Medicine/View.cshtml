
@{
    ViewBag.Title = "View";
}

<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Medicines List</h4>
            <table id="medicinesTable" class="table row-border table-striped hover order-column table-bordered dt-responsive nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th style="text-align:center">Name</th>
                        <th style="text-align:center">Price</th>
                        <th style="text-align:center">MRP</th>
                        <th style="text-align:center">Order Level</th>
                        <th style="text-align:center">Stock Level</th>
                        <th style="text-align:center">Category</th>
                        <th style="text-align:center">Manufacturer</th>
                        <th style="text-align:center"></th>
                    </tr>   
                </thead>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script>
        var medicineTable = $('#medicinesTable').DataTable({
            columnDefs: [
                {
                    targets: 0,
                    className: 'dt-body-center'
                },
                {
                    targets: 1,
                    className: 'dt-body-center'
                },
                {
                    targets: 2,
                    className: 'dt-body-center'
                },
                {
                    targets: 3,
                    className: 'dt-body-center'
                },
                {
                    targets: 4,
                    className: 'dt-body-center'
                },
                {
                    targets: 5,
                    className: 'dt-body-center'
                },
                {
                    targets: 6,
                    className: 'dt-body-center'
                }
            ],
            serverSide: true,
            scrollY: 200,
            paging: false,
            scroller: {
                loadingIndicator: true
            },
            dom: 'Bfrtip',
            processing: true,
            buttons: [
                'copy', 'excel', 'pdf', 'print'
            ],
            "ajax": {
                "url": "GetMedicines",
                "type": "GET",
                "datatype": "json"
            },
            "columns": [
                { "data": "Name" },
                {
                    "data": "Price", render: function (data) {
                        return "&#x20b9; "+ data;
                    }},
                { "data": "MRP", render: function (data) {
                        return "&#x20b9; "+ data;
                    }},
                { "data": "OrderLevel" },
                { "data": "StockLevel" },
                { "data": "CategoryName" },
                { "data": "ManufacturerName" },
                {
                    "data": "Id", "render": function (data) {
                        return "<button onclick = getAppointment('" + data + "')  class='btn btn-gradient-primary btn-sm mdi mdi-lead-pencil'style='margin-right:10px' > <button onclick = deleteAppointment('" + data + "') class='btn btn-gradient-primary btn-sm  mdi mdi-delete'>"
                    },
                    "orderable": false,
                    "width": "10px"
                }
            ],
            "language": {
                "emptyTable": "No data found, please add new <b>Medicine</b> from the menu."
            }
        });
    </script>
}
